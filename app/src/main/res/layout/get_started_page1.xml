<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to the Seva App!"
        android:layout_marginTop="96dp"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/get_started_title"
        android:textColor="@color/text_dark"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="232dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:text="1. Our sensors tell technicians somthing is wrong."
        android:layout_marginTop="125dp"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:id="@+id/get_started_description"
        android:lineSpacingMultiplier="1.50"
        android:textColor="@color/text_light"/>

    <TextView
        android:layout_width="232dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:text="1. Our sensors tell technicians somthing is wrong."
        android:layout_marginTop="96dp"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:id="@+id/get_started_desc_no_title"
        android:lineSpacingMultiplier="1.50"
        android:textColor="@color/text_light"/>

    <ImageView
        android:id="@+id/get_started_pic"
        android:layout_width="345dp"
        android:layout_height="430dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="185dp"
        android:layout_above="@+id/ok_login"
        android:src="@drawable/getstarted1" />

    <Button
        android:id="@+id/ok_login"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:width="239dp"
        android:layout_centerInParent="true"
        android:layout_above="@+id/layoutDots"
        android:text="Ok, login!"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/accent"/>

    <LinearLayout
        android:id="@+id/layoutDots"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="horizontal">

    </LinearLayout>



</RelativeLayout>
