<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/stepPic"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:tint="#2F000000"
        app:srcCompat="@drawable/seva_pump_360_step1" />

    <TextView
        android:id="@+id/stepText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="205dp"
        android:layout_marginStart="16dp"
        android:text=""
        android:textColor="@color/icons"
        android:textSize="28sp" />

    <ImageView
        android:id="@+id/speechButton"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="346dp"
        android:layout_marginEnd="17dp"
        app:srcCompat="@drawable/floating_sound_button" />

    <ImageView
        android:id="@+id/stepSymbol"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/stepText"
        android:layout_marginTop="-120dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/stepInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/stepSymbol"
        android:layout_marginBottom="92dp"
        android:layout_marginStart="17dp"
        android:text=""
        android:textColor="@color/primary_text"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/stepNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/stepSymbol"
        android:layout_below="@+id/stepInfo"
        android:layout_marginTop="-93dp"
        android:layout_marginStart="17dp"
        android:text=""
        android:textColor="@color/secondary_text"
        android:textSize="16sp" />

</RelativeLayout>