<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <View
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:background="@color/colorPrimaryTransparent">
    </View>

    <TextView
        android:id="@+id/stepText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="21dp"
        android:layout_marginStart="16dp"
        android:text=""
        android:textColor="@color/primary_text"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/stepInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stepText"
        android:layout_marginTop="2dp"
        android:layout_marginStart="17dp"
        android:text=""
        android:textColor="@color/primary_text"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/stepPic"
        android:layout_below="@+id/stepNum"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:maxHeight="400dp"
        android:layout_marginTop="16dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:tint="#2F000000"
        app:srcCompat="@drawable/seva_pump_360_step1" />

    <ImageView
        android:id="@+id/speechButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="74.5dp"
        android:layout_marginEnd="17dp"
        app:srcCompat="@drawable/floating_sound_button" />

    <TextView
        android:id="@+id/stepNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_bar"
        android:layout_marginTop="17dp"
        android:layout_marginStart="16dp"
        android:text=""
        android:textColor="@color/secondary_text"
        android:textSize="16sp" />
    <Button
        android:id="@+id/take_picture_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/picture_button_text"
        android:minHeight="0dp"
        android:paddingTop="11dp"
        android:paddingBottom="9dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:layout_marginHorizontal="36dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:background="@color/accent"
        android:visibility="gone"
        android:textColor="@android:color/white"
        />

</RelativeLayout>